section#portfolio-section.section.has-background-blue
  .container
    h2.section-title.title.is-2.has-text-white.has-text-centered Nos projets
    .kuartz-underline-title
    .columns.is-variable.is-4.is-multiline
      - data.portfolio.each do |reference|
        .column.is-6.portfolio-element
          .columns
            .column.is-6.portfolio-description-container
              h3.title.is-3.has-text-grey-light.reference-card-title = reference.name
              h4.title.is-4.has-text-grey-lighter.reference-card-description = reference.client
            .column.is-6
              .reference-card
                .image.portfolio-image class="#{reference.image_orientation}-image"
                  = image_tag "https://res.cloudinary.com/kuartz/image/upload/portfolio/#{reference.image_url}"
            
            .portfolio-modal-container
              .portfolio-modal
                .close-btn-container.modal-btn-container
                  .close-btn.modal-btn
                    i.fas.fa-times
                .next-btn-container.modal-btn-container
                  .next-btn.modal-btn
                    i.fas.fa-angle-right
                .previous-btn-container.modal-btn-container
                  .previous-btn.modal-btn
                    i.fas.fa-angle-left

                .h2.title.modal-title = reference.name
                .columns.is-gapless
                  .column.is-two-third.image-container
                    = image_tag "https://res.cloudinary.com/kuartz/image/upload/portfolio/#{reference.image_url}"
                  .column.is-one-third
                    p.modal-description = reference.description
